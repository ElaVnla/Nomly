<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.Profile">

    <!-- This FrameLayout contains the Back Button and Title -->
    <FrameLayout
        android:background="@color/actionBarBackground"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backbtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/icon_button_bg_color"
            app:icon="@drawable/right_arrow"
            app:iconTint="@color/icon_button_icon_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editProfile"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginStart="20dp"
            app:icon="@drawable/pencilicon"
            app:iconTint="@color/icon_button_icon_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/semi_bold"
            android:paddingTop="10dp"
            android:text="Profile"
            android:textColor="@color/text_color_primary"
            android:textSize="20sp" />
    </FrameLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-10dp"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/semi_bold"
                android:textColor="@color/text_color_black"
                android:text="William Smith"
                android:textSize="28sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/regular"
                android:text="William Smith"
                android:textColor="@color/color_primary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="20dp"
                    app:iconGravity="textStart"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/icon_button_bg_color"
                    android:clickable="false"
                    app:icon="@drawable/callicon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Mobile Phone"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="Mobile Phone"
                        android:textColor="@color/text_color_black"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:iconGravity="textStart"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/icon_button_bg_color"
                    android:clickable="false"
                    app:icon="@drawable/email_" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Email Address"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="williamsmithy@mail.com"
                        android:textColor="@color/text_color_black"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_gravity="start|center"
                    app:iconGravity="textStart"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/icon_button_bg_color"
                    android:clickable="false"
                    app:icon="@drawable/location" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Address"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="Franklin Avenue, Corner St. London, 24125151"
                        android:textColor="@color/text_color_black"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most Ordered"
                android:textSize="18sp"
                android:fontFamily="@font/medium"
                android:textColor="@color/text_color_black"
                android:layout_marginStart="29dp"
                android:layout_marginTop="35dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mostOrderedView"
                android:layout_width="match_parent"
                android:layout_marginStart="29dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:scrollbars="horizontal"
                tools:listitem="@layout/most_ordered_item"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>