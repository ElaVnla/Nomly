<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_primary"
    android:orientation="vertical"
    tools:context=".activity.login_signin_Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/app_logo24"
            android:drawablePadding="5dp"
            android:fontFamily="@font/semi_bold"
            android:paddingTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/text_color_primary"
            android:textSize="25dp" />

    </FrameLayout>


    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/semi_bold"
        android:text="Sign In"
        android:textColor="@color/text_color_primary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/subTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/regular"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor "
        android:textColor="@color/text_color_secondary"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/regular"
        android:text="Username"
        android:textColor="@color/edittext_hint_color"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/regular"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:hint="williamsmith"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/regular"
        android:text="Password"
        android:textColor="@color/edittext_hint_color"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="26dp"
        android:inputType="textPassword"
        android:paddingTop="16dp"
        android:fontFamily="@font/regular"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:hint="。。。。。。。。。。"
        android:textColorHint="@color/text_color_black"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        style="@style/button_primary_style"
        android:layout_marginTop="30dp"
        android:text="LOGIN"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textColor="@color/text_color_secondary"
            android:textSize="14dp"
            android:text="Forgot password?"/>

        <TextView
            android:id="@+id/resetPasswordBnt"
            android:fontFamily="@font/regular"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/color_primary"
            android:layout_height="wrap_content"
            android:text="Reset here"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="19dp"
        android:textColor="@color/text_color_secondary"
        android:textSize="14dp"
        android:text="Don’t have an account?"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/createAccountBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/button_primary_style"
        android:text="Create an account"
        android:textColor="@color/btn_text_color_secondary"
        android:backgroundTint="@color/color_active"/>


</LinearLayout>